---
import { Icon } from 'astro-icon/components';
import note from '~/config/components/note';

export interface Props {
  backgroundCss?: any;
}

const {
  backgroundCss,
} = Astro.props;

var backgroundStyle = '';
if (backgroundCss === '' || backgroundCss) {
  backgroundStyle = backgroundCss;
} else {
  backgroundStyle = 'bg-sage-50 dark:bg-slate-800';
}
---

{
  note && note.enabled && (
    <section class="`${backgroundStyle} not-prose`">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
        {note.icon.enabled && <Icon name={note.icon.name} class="w-5 h-5 inline-block align-text-bottom" />}
        <Fragment set:html={note.text} />
      </div>
    </section>
  )
}
