---
import Layout from '~/layouts/PageLayout.astro';

import { MetaSEO } from '~/types';

import Hero from '~/components/widgets/Hero.astro';
import hero from '~/config/pages/details/hero';

export interface Props {
  frontmatter: {
    title: string;
    subtitle: string;
  };
}

const { frontmatter } = Astro.props;

const meta: MetaSEO = {
  title: frontmatter?.title,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  {
    (
      <Hero
        padding={'pt-12 md:pt-20'}
      >
        {<Fragment slot="title" set:html={hero.title.text} />}

        {<Fragment slot="subtitle" set:html={hero.subtitle.text} />}
      </Hero>
    )
  }
  <section class="px-2 py-8 sm:px-4 mx-auto lg:px-6 lg:py-1 max-w-4xl">
    <div
      class="mx-auto prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-sage-600 dark:prose-a:text-sage-400 prose-img:rounded-md prose-img:shadow-lg mt-8 text-white dark:text-white"
    >
      <slot />
    </div>
  </section>
</Layout>
